  background-repeat no-repeat
  background-position center center
  background-size 2rem 2rem
  background-position right 0.75rem center

select.ph.is-invalid,
select.ph[invalid]
  border-color red
  box-shadow none
  border-width 2px
  background-color #e1e1e1

select::-ms-expand
  display none


.ph.html
  background transparent
  height auto
  flex-grow 0
  flex-shrink 0
  width calc(100% - 320px)
  padding-top 4rem
  display none
  justify-content center
  align-items center
  &.is-active
    display flex
  &.no-ui
    width 100%
    padding 0


.ph.button.text
  text-transform uppercase
  font-weight 500
  font-size 12px
  background transparent
  border none
  padding 0 0.5rem
  margin 0
  height 28px
  cursor pointer
  opacity 0.3
  color #000

  &.is-active
    cursor default
  &:hover,
  &.is-active
    opacity 1
  + .ph.button.text
    margin-left 0.5rem


.ph.html pre
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  margin 0
  padding 0
  padding-top 4rem
  padding-left 2.5rem
  background-color transparent
