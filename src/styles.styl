@keyframes openXPinnedTopCenter
  0%
    display none
    opacity 0

  1%
    display flex
    opacity 0
    transform scaleX(0) translateX(-50%)

  50%
    display flex
    transform scaleX(1) translateX(-50%)

  100%
    opacity 1
    display flex
    transform scaleX(1) translateX(-50%)

